{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"lib": [
			"ESNext",
			"DOM"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"vite.config.ts",
		"uno.config.ts"
	]
}
